<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="../assets/images/tr.png"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 login">
        <form method="post">
          <div class="flex-row align-items-center justify-content-center justify-content-lg-start">

          <h4 class="login_title">Welcome to your new Therapy</h4>
          
          <div class="form-outline mb-4 login_gameId">
            <label for="inputId_user">Game ID</label>
            <input type="text" value="{{ last_username }}" name="id_user" id="inputId_user" class="form-control form-control-lg" autocomplete="username" required autofocus>
          </div>

          <div class="form-outline mb-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required>
          </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <div>
            <span>You don't have an account ? <a href="{{path('app_register')}}"> Register here </a></span>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2 login_button">
            <button class="btn btn-lg btn-danger" type="submit">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
    
