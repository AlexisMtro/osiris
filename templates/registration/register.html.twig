{% extends 'base.html.twig' %}

{% block title %}Register a new account{% endblock %}

{% block body %}


<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="../assets/images/tr.png"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 registration">
        <div class="flex-row align-items-center justify-content-center justify-content-lg-start">
            <h4 class="registration_title">Register to be added in the Therapy list</h4>
            {{ form_start(registrationForm) }}
                <div class="registration_field">
                    {{ form_row(registrationForm.id_user) }}
                </div>
                <div class="registration_field">
                    {{ form_row(registrationForm.name) }}
                </div>
                <div class="registration_field">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="registration_field">
                    {{ form_row(registrationForm.validator) }}
                </div>
                <div class="text-center text-lg-start mt-4 pt-2 registration_button">
                    <button class="btn btn-lg btn-danger" type="submit">Register</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
