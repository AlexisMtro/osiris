            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.iconic_leg)}}
            </div>
        </div>

        <div class="row align-items-center custom-line">
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.boot)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.crit_boot)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.iconic_boot)}}
            </div>
        </div>

        <div class="row align-items-center custom-line">
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.accessory_1)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.crit_accessory_1)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.iconic_accessory_1)}}
            </div>
        </div>

        <div class="row align-items-center custom-line">
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.accessory_2)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.crit_accessory_2)}}
            </div>
            <div class="col-lg newMarch_field">
                {{form_row(editMarchForm.iconic_accessory_2)}}
            </div>
        </div>
    <button class="btn btn-lg btn-danger newMarch_save" type="submit">Save</button>
    {{form_end(editMarchForm)}}
</div>
{% endblock %}
